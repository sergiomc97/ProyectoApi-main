<UserControl
    x:Class="ProyectoApi.Presentacion.Menu2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Viewbox>

        <!--
            #294D96
            #D0CFDD
            #5577B2
            #869FC8
            #D14E49
            #713D62
        -->
        <Grid Loaded="Grid_Loaded">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
            </Grid.RowDefinitions>

            <Grid
                x:Name="gridUser"
                Grid.Row="1"
                Grid.Column="1"
                Background="#5577B2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Height="250"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Resources/color-scheme-right.png" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,58,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Usuario:"
                    FontFamily="Nasalization Rg"
                    FontSize="20"
                    Foreground="White" />
                <Label
                    x:Name="lablUserNick"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,116,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="Nasalization Rg"
                    FontSize="30"
                    Foreground="White" />


                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="#D0CFDD">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="100"
                            ShadowDepth="0"
                            Color="Black" />
                    </Border.Effect>
                    <Button
                        x:Name="sa"
                        Width="510"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="salir_Click">
                        <Button.Content>
                            <StackPanel Width="500" Orientation="Horizontal">
                                <Image Width="100" Source="/Resources/Space icons (47).png" />
                                <Label
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="CERRAR SESION"
                                    FontFamily="Nasalization Rg"
                                    FontSize="20" />
                            </StackPanel>
                        </Button.Content>

                    </Button>
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="#D0CFDD">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="100"
                            ShadowDepth="0"
                            Color="Black" />
                    </Border.Effect>
                    <Button
                        x:Name="fav"
                        Width="510"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="fav_Click">
                        <Button.Content>
                            <StackPanel Width="500" Orientation="Horizontal">
                                <Image Width="100" Source="/Resources/Space icons (47).png" />
                                <Label
                                    VerticalAlignment="Center"
                                    Content="FAVORITOS"
                                    FontFamily="Nasalization Rg"
                                    FontSize="20" />
                            </StackPanel>
                        </Button.Content>

                    </Button>
                </Border>
            </Grid>


            <Border
                Grid.Row="3"
                Grid.Column="1"
                Background="#869FC8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="100"
                        ShadowDepth="0"
                        Color="Black" />
                </Border.Effect>
                <Button
                    x:Name="apod"
                    Background="Transparent"
                    Click="apod_Click">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image Width="150" Source="/Resources/Space icons (42).png" />
                            <Label
                                Width="292"
                                Height="42"
                                HorizontalContentAlignment="Center"
                                Content="APOD"
                                FontFamily="Nasalization Rg"
                                FontSize="30" />
                        </StackPanel>
                    </Button.Content>

                </Button>


            </Border>

            <Border
                Grid.Row="5"
                Grid.Column="1"
                Background="#5577B2">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="100"
                        ShadowDepth="0"
                        Color="Black" />
                </Border.Effect>

                <Button
                    x:Name="asteroides"
                    Background="Transparent"
                    Click="asteroides_Click">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image Width="150" Source="/Resources/Space icons (17).png" />
                            <Label
                                Width="292"
                                Height="42"
                                HorizontalContentAlignment="Center"
                                Content="Asteroids NeoWS"
                                FontFamily="Nasalization Rg"
                                FontSize="30" />
                        </StackPanel>
                    </Button.Content>

                </Button>
            </Border>

            <Border
                Grid.Row="7"
                Grid.Column="1"
                Background="#6572A5">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="100"
                        ShadowDepth="0"
                        Color="Black" />
                </Border.Effect>
                <Button
                    x:Name="earth"
                    Background="Transparent"
                    Click="earth_Click">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image Width="150" Source="/Resources/Space icons (3).png" />
                            <Label
                                Width="292"
                                Height="42"
                                HorizontalContentAlignment="Center"
                                Content="EARTH"
                                FontFamily="Nasalization Rg"
                                FontSize="30" />
                        </StackPanel>
                    </Button.Content>

                </Button>
            </Border>

            <Border
                Grid.Row="9"
                Grid.Column="1"
                Background="#93637E">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="100"
                        ShadowDepth="0"
                        Color="Black" />
                </Border.Effect>
                <Button
                    x:Name="epic"
                    Background="Transparent"
                    Click="epic_Click">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image Width="150" Source="/Resources/Space icons (24).png" />
                            <Label
                                Width="292"
                                Height="42"
                                HorizontalContentAlignment="Center"
                                Content="EPIC"
                                FontFamily="Nasalization Rg"
                                FontSize="30" />
                        </StackPanel>
                    </Button.Content>

                </Button>
            </Border>

            <Border
                Grid.Row="11"
                Grid.Column="1"
                Background="#B25964">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="100"
                        ShadowDepth="0"
                        Color="Black" />
                </Border.Effect>
                <Button
                    x:Name="rover"
                    Background="Transparent"
                    Click="rover_Click">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image Width="150" Source="/Resources/Space icons (28).png" />
                            <Label
                                Width="292"
                                Height="42"
                                HorizontalContentAlignment="Center"
                                Content="ROVER PHOTOS"
                                FontFamily="Nasalization Rg"
                                FontSize="30" />
                        </StackPanel>
                    </Button.Content>

                </Button>
            </Border>

            <Border
                x:Name="ad"
                Grid.Row="13"
                Grid.Column="1"
                Background="#D14E49"
                Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="100"
                        ShadowDepth="0"
                        Color="Black" />
                </Border.Effect>
                <Button
                    x:Name="admin"
                    Background="Transparent"
                    Click="admin_Click">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image Width="150" Source="/Resources/Space icons (12).png" />
                            <Label
                                Width="292"
                                Height="42"
                                HorizontalContentAlignment="Center"
                                Content="ADMIN"
                                FontFamily="Nasalization Rg"
                                FontSize="30" />
                        </StackPanel>
                    </Button.Content>

                </Button>
            </Border>




        </Grid>
    </Viewbox>
</UserControl>
